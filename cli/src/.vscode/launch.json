    "version": "0.2.0",
    "configurations": [
        {
            "name": "Init logstash",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["package", "init", "-n=analytics-datastore-elastic-search", "-c=git@github.com:jembi/disi-on-platform.git", "--dev", "--env-file=.env", "--ssh-key=/home/castello/.ssh/id_rsa"] 
        },
        {
            "name": "Package Generate",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["package", "generate"] 
        },
        {
            "name": "Remove logstash",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["package", "remove", "-c=git@github.com:jembi/disi-on-platform.git", "--dev", "--env-file=.env"]
        },
        {
            "name": "Init JSR",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["package", "init", "-n=dashboard-visualiser-jsreport", "--dev", "--env-file=.env.local", "--config=config.yml"]
        },
    ]
}
